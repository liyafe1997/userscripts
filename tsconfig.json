{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"jsx": "react",
		"rootDir": "."
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules/**", "watch.ts"],
	"files": [".resources/global.d.ts"]
}
